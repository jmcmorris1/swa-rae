{
    "global": {
        "ignore": [
            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",
            "vendor/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",

            "**/*.min.js",
            "**/*.min.css"
        ]
    },

    "jslint": {
        "files": [

            "**/*.json",
            "**/.*.json"
        ],
        "ignore": [],
        "rcFile": ".jslintrc"
    },

    "jshint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json"
        ],
        "ignore": [],
        "rcFile": ".jshintrc"
    },


    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".htmlhintrc"
    },

    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": null
    },

    "bootlint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".bootlintrc.json"
    },

    "markdownlint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": ["README.md"],
        "rcFile": ".markdownlint.json"
    },

    "remark-lint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": ["README.md"],
        "rcFile": ".remarkrc"
    }
}
